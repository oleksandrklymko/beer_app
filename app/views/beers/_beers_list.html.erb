<div class="row">
  <% beers.each do |beer| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= beer["name"] %></h5>
          <p class="card-text"><%= beer["brewery_type"] %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
