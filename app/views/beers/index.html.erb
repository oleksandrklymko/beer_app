<div class="container mt-4">
  <h1>Beers</h1>

  <%= form_with url: search_beers_path, method: :get, local: false, id: "beer-search-form" do %>
    <%= text_field_tag :query, nil, placeholder: "Search Beers", class: "form-control", data: { action: "input->beer-search#search" } %>
  <% end %>

  <br>

  <div id="beer-list">
    <%= render partial: 'beers_list', locals: { beers: @beers } %>
  </div>
</div>
